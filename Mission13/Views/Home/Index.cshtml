@{
    ViewData["Title"] = "Bowler Home Page";
}
@model List<Bowler>

<h1>@ViewBag.Teamname</h1>

<a asp-action="Index" asp-controller="Home" asp-route-TeamID="Null" class="btn btn-primary">All</a>
@foreach (var t in ViewBag.Teams)
{
    @if (t.TeamName == ViewBag.TeamName)
    {
        <a asp-action="Index" asp-controller="Home" asp-route-TeamID="@t.TeamID"  class="btn btn-success">@t.TeamName</a>
    }
    else
    {
        <a asp-action="Index" asp-controller="Home" asp-route-TeamID="@t.TeamID" class="btn btn-primary">@t.TeamName</a>
    }

    
}
<a asp-action="BowlerEntry" asp-controller="Home" class="btn btn-primary">Add Bowler</a>
<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <td>First Name</td>
            <td>Middle Initial</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone Number</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
        <tr>
            <td>@b.BowlerFirstName</td>
            <td>@b.BowlerMiddleInit</td>
            <td>@b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>
            <td><a asp-controller="Home" asp-action="Edit" asp-route-BowlerID="@b.BowlerID">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-BowlerID="@b.BowlerID">Delete</a></td>
        </tr>
            
        }

    </tbody>
</table>
